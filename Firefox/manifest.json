{
  "manifest_version": 2,
  "name": "Link Previewer",
  "version": "2.0",
  "description": "Preview links in a popup without leaving your current page.",
  "icons": {
    "48": "icons/tab-preview 48x48.png",
    "96": "icons/tab-preview 96x96.png"
  },
  "permissions": [
    "activeTab",
    "storage",
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["preview_style.css"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/tab-preview 96x96.png",
    "default_title": "Link Previewer Settings",
    "default_popup": "options/options.html"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "link-previewer@example.com"
    }
  }
}